<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
        xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
           
           
           
     <bean name="addr1" class="com.srm.beansXmlBased.Address">
       <property name="street" value="dollars street"></property>  
	    <property name="city" value="Bangalore"></property>  
	    <property name="pin" value="560000"></property> 
	    <property name="landMarks">
			<list>
				<value>ABC school</value>	
				<value>Post Office</value>
				<value>Some landMark</value>
			</list>
		</property>
	   
      </bean>         
           
  <bean  name="emp1" class="com.srm.beansXmlBased.Employee" scope="singleton">
  
     <constructor-arg value="101" />
        <constructor-arg value="saqib" />
          <constructor-arg value="saqib@gmail.com" /> 
            <constructor-arg ref="addr1" /> 
  </bean>          
           
           
           
           
           
           
           
           
           
           
           
           

  

 

 
</beans>